
@{
    ViewData["Title"] = "Store";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width-device-width"/>
    <link rel="stylesheet" asp-href-include="\lib\css\style.css"/>
    <link rel="stylesheet"
          asp-href-include="\lib\twitter-bootstrap\css\bootstrap.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="~/lib/fontawesome/css/all.css"/>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">        
            <a class="col navbar-brand" href="#">@ViewData["Title"]</a>
            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
